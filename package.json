{
    "name": "metta-formatter-highlighter",
    "displayName": "MeTTa Lang Formatter + Highlighter + Icon",
    "description": "Provides syntax formatting, highlighting, and file icons for MeTTa language.",
    "version": "0.0.1",
    "publisher": "Baslael-Workineh-Ayele",
    "engines": {
      "vscode": "^1.60.0"
    },
    "categories": [
      "Programming Languages"
    ],
    "icon": "icons/metta-icon.png",
    "contributes": {
      "languages": [
        {
          "id": "metta",
          "aliases": ["MeTTa", "metta"],
          "extensions": [".metta"],
          "configuration": "./language-configuration.json"
        }
      ],
      "grammars": [
        {
          "language": "metta",
          "scopeName": "source.metta",
          "path": "./syntaxes/metta.tmLanguage.json"
        }
      ],
      "iconThemes": [
        {
          "id": "metta-icon-theme",
          "label": "MeTTa Icon Theme",
          "path": "./icons/icon-theme.json"
        }
      ]
    },
    "activationEvents": [
      "onLanguage:metta"
    ],
    "main": "./src/extension.js",
    "scripts": {
      "vscode:prepublish": "npm run build",
      "build": "echo 'No build step required.'"
    }
  }
  